<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color -->
            <stroke
                android:color="@color/light_silver"
                android:width="2dp" /> <!-- Border thickness -->
        </shape>
    </item>
</layer-list>
