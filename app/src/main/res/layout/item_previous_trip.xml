<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0.5"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/countryFlagImageView"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_flag_spain" />

    <TextView
        android:id="@+id/countryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/countryFlagImageView"
        android:layout_alignTop="@id/countryFlagImageView"
        android:layout_marginStart="13dp"
        android:text="Country Name"
        android:textSize="15sp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/currentDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countryNameTextView"
        android:layout_toEndOf="@id/countryFlagImageView"
        android:layout_marginTop="5dp"
        android:layout_marginStart="13dp"
        android:text="Current Date"
        android:textColor="@color/silver_chalice"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/totalSpentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/rightArrowImageView"
        android:layout_alignTop="@id/rightArrowImageView"
        android:layout_marginEnd="9dp"
        android:text="Total Spent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/refundValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalSpentTextView"
        android:layout_toStartOf="@id/rightArrowImageView"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="5dp"
        android:text="Refund Value"
        android:textColor="@color/text_green"
        android:paddingHorizontal="7dp"
        android:paddingVertical="3dp"
        android:background="@drawable/shape_background_refund_green"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/rightArrowImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:tint="@color/silver_chalice"
        android:src="@drawable/ic_arrow_right"/>

</RelativeLayout>